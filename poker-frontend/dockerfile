# Stage 1: Build
FROM node:20-alpine AS build
WORKDIR /app
COPY package*.json ./
RUN npm install

# Set build args BEFORE copying source files
ARG VITE_API_URL
ENV VITE_API_URL=$VITE_API_URL

COPY . .

# Overwrite any .env file so it can't override our build arg
RUN echo "VITE_API_URL=$VITE_API_URL" > .env && \
    echo "VITE_API_URL=$VITE_API_URL" > .env.production

RUN npm run build

# Stage 2: Serve
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80